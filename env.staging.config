# 測試環境配置
NODE_ENV=staging
PORT=3000

# API 配置
API_BASE_URL=https://cardstrategy-api.onrender.com/api
REACT_APP_API_URL=https://cardstrategy-api.onrender.com/api

# 數據庫配置 (PostgreSQL)
DB_HOST=your-staging-postgres-host
DB_PORT=5432
DB_NAME=cardstrategy_staging
DB_USER=cardstrategy_user
DB_PASSWORD=your-staging-db-password

# Redis 配置
REDIS_HOST=your-staging-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-staging-redis-password
REDIS_TLS=true

# JWT 配置
JWT_SECRET=your-staging-jwt-secret
JWT_EXPIRE=24h

# 文件上傳配置
UPLOAD_PATH=/app/uploads
LOG_PATH=/app/logs
MODEL_PATH=/app/models
EXPORT_PATH=/app/exports

# CORS 配置
CORS_ORIGIN=https://staging.cardstrategy.com

# 郵件配置
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# 第三方 API 配置
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# 日誌配置
LOG_LEVEL=debug
LOG_FORMAT=json

# 監控配置
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# 安全配置
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200
SESSION_SECRET=your-staging-session-secret

# 部署配置
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
DIGITALOCEAN_ACCESS_TOKEN=your-digitalocean-access-token
DROPLET_ID=your-droplet-id
RENDER_TOKEN=your-render-api-token
RENDER_SERVICE_ID=your-render-service-id

# 域名配置
DOMAIN=staging.cardstrategy.com
API_DOMAIN=api.staging.cardstrategy.com
CDN_DOMAIN=cdn.staging.cardstrategy.com
