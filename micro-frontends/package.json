{
  "name": "cardstrategy-micro-frontends",
  "version": "1.0.0",
  "description": "CardStrategy 微前端架構",
  "main": "index.js",
  "scripts": {
    "start": "node start-all.js",
    "build": "npm run build:shell && npm run build:card-management && npm run build:market-analysis && npm run build:ai-ecosystem",
    "build:shell": "cd shell && npm run build",
    "build:card-management": "cd card-management && npm run build",
    "build:market-analysis": "cd market-analysis && npm run build",
    "build:ai-ecosystem": "cd ai-ecosystem && npm run build",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=src/__tests__ --coverage",
    "test:integration": "ts-node tests/integration/test-runner.ts",
    "test:integration:watch": "ts-node tests/integration/test-runner.ts --watch",
    "test:coverage": "jest --coverage --coverageDirectory=coverage",
    "test:report": "npm run test:integration && open test-reports/integration-test-report-*.html",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:e2e:codegen": "playwright codegen",
    "test:performance": "playwright test tests/performance/",
    "test:performance:benchmark": "playwright test tests/performance/performance-benchmark.test.ts",
    "test:performance:load": "playwright test tests/performance/load-testing.test.ts",
    "test:performance:load:advanced": "playwright test tests/performance/advanced-load-testing.test.ts",
    "test:performance:optimization": "playwright test tests/performance/performance-optimization.test.ts",
    "test:performance:report": "npm run test:performance && node scripts/generate-performance-report.js",
    "test:performance:monitor": "node scripts/performance-monitor.js",
    "test:performance:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=test-results/lighthouse-report.json",
    "test:performance:analyze": "webpack-bundle-analyzer dist/stats.json",
    "test:load": "playwright test tests/performance/load-testing.test.ts",
    "test:load:progressive": "playwright test tests/performance/advanced-load-testing.test.ts --grep '漸進式負載測試'",
    "test:load:spike": "playwright test tests/performance/advanced-load-testing.test.ts --grep '尖峰負載測試'",
    "test:load:endurance": "playwright test tests/performance/advanced-load-testing.test.ts --grep '持續負載測試'",
    "test:load:burst": "playwright test tests/performance/advanced-load-testing.test.ts --grep '突發負載測試'",
    "test:load:mixed": "playwright test tests/performance/advanced-load-testing.test.ts --grep '混合負載測試'",
    "test:load:light": "playwright test tests/performance/load-testing.test.ts --grep '輕度負載測試'",
    "test:load:medium": "playwright test tests/performance/load-testing.test.ts --grep '中度負載測試'",
    "test:load:heavy": "playwright test tests/performance/load-testing.test.ts --grep '重度負載測試'",
    "test:load:stress": "playwright test tests/performance/load-testing.test.ts --grep '壓力測試'",
    "test:load:api": "playwright test tests/performance/load-testing.test.ts --grep 'API 端點負載測試'",
    "test:load:database": "playwright test tests/performance/load-testing.test.ts --grep '數據庫查詢性能測試'",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance && npm run test:security && npm run test:accessibility && npm run test:data-retention",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist coverage test-reports test-results",
    "dev": "concurrently \"npm run dev:shell\" \"npm run dev:card-management\" \"npm run dev:market-analysis\" \"npm run dev:ai-ecosystem\"",
    "dev:shell": "cd shell && npm start",
    "dev:card-management": "cd card-management && npm start",
    "dev:market-analysis": "cd market-analysis && npm start",
    "dev:ai-ecosystem": "cd ai-ecosystem && npm start",
    "install:all": "npm install && cd shell && npm install && cd ../card-management && npm install && cd ../market-analysis && npm install && cd ../ai-ecosystem && npm install",
    "setup": "npm run install:all && npm run build",
    "deploy": "npm run build && npm run test && echo '部署準備完成'",
    "performance:analyze": "npm run build && webpack-bundle-analyzer dist/stats.json",
    "performance:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=test-results/lighthouse-report.json",
    "performance:monitor": "node scripts/performance-monitor.js",
    "performance:report": "node scripts/generate-performance-report.js",
    "load:quick": "playwright test tests/performance/load-testing.test.ts --grep '輕度負載測試' --timeout=60000",
    "load:full": "playwright test tests/performance/advanced-load-testing.test.ts --timeout=600000",
    "load:report": "npm run test:load && node scripts/generate-load-report.js",
    "test:security": "playwright test tests/security/",
    "test:security:basic": "playwright test tests/security/security-testing.test.ts",
    "test:security:advanced": "playwright test tests/security/advanced-security-testing.test.ts",
    "test:security:report": "npm run test:security && node scripts/generate-security-report.js",
    "security:quick": "playwright test tests/security/security-testing.test.ts --timeout=120000",
    "security:full": "playwright test tests/security/ --timeout=300000",
    "security:report": "node scripts/generate-security-report.js",
    "test:accessibility": "playwright test tests/accessibility/",
    "test:accessibility:basic": "playwright test tests/accessibility/accessibility-testing.test.ts",
    "test:accessibility:advanced": "playwright test tests/accessibility/advanced-accessibility-testing.test.ts",
    "test:accessibility:report": "npm run test:accessibility && node scripts/generate-accessibility-report.js",
    "accessibility:quick": "playwright test tests/accessibility/accessibility-testing.test.ts --timeout=120000",
    "accessibility:full": "playwright test tests/accessibility/ --timeout=300000",
    "accessibility:report": "node scripts/generate-accessibility-report.js",
    "test:data-retention": "playwright test tests/data-retention/",
    "test:data-retention:basic": "playwright test tests/data-retention/data-retention-testing.test.ts",
    "test:data-retention:advanced": "playwright test tests/data-retention/advanced-data-retention-testing.test.ts",
    "test:data-retention:report": "npm run test:data-retention && node scripts/generate-data-retention-report.js",
    "data-retention:quick": "playwright test tests/data-retention/data-retention-testing.test.ts --timeout=120000",
    "data-retention:full": "playwright test tests/data-retention/ --timeout=300000",
    "data-retention:report": "node scripts/generate-data-retention-report.js"
  },
  "keywords": [
    "micro-frontend",
    "react",
    "typescript",
    "webpack",
    "module-federation",
    "cardstrategy",
    "performance",
    "testing",
    "load-testing",
    "security-testing",
    "accessibility-testing",
    "data-retention-management"
  ],
  "author": "CardStrategy Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.4.0",
    "msw": "^1.3.2",
    "playwright": "^1.40.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack-bundle-analyzer": "^4.9.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "react-redux": "^8.1.2",
    "@reduxjs/toolkit": "^1.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.ts",
      "!src/**/*.test.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/CardStrategy.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/CardStrategy/issues"
  },
  "homepage": "https://github.com/your-username/CardStrategy#readme"
}
