# ==================== 生產環境配置 ====================
NODE_ENV=production
PORT=3000

# ==================== 數據庫配置 ====================
# PostgreSQL 配置 (生產數據庫)
POSTGRES_HOST=${POSTGRES_HOST}
POSTGRES_PORT=5432
POSTGRES_DB=cardstrategy_prod
POSTGRES_USER=${POSTGRES_USER}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis 配置 (生產緩存)
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ==================== JWT配置 ====================
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRE=7d

# ==================== 跨域配置 ====================
ALLOWED_ORIGINS=https://cardstrategy.com,https://www.cardstrategy.com,https://app.cardstrategy.com

# ==================== 郵件配置 ====================
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}

# ==================== 雲存儲配置 ====================
CLOUDINARY_CLOUD_NAME=${CLOUDINARY_CLOUD_NAME}
CLOUDINARY_API_KEY=${CLOUDINARY_API_KEY}
CLOUDINARY_API_SECRET=${CLOUDINARY_API_SECRET}

# ==================== 第三方API配置 ====================
OPENAI_API_KEY=${OPENAI_API_KEY}
GOOGLE_PALM_API_KEY=${GOOGLE_PALM_API_KEY}
AZURE_OPENAI_API_KEY=${AZURE_OPENAI_API_KEY}
AZURE_OPENAI_ENDPOINT=${AZURE_OPENAI_ENDPOINT}
COHERE_API_KEY=${COHERE_API_KEY}
HUGGING_FACE_API_KEY=${HUGGING_FACE_API_KEY}

# ==================== 支付配置 ====================
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}
PAYPAL_CLIENT_ID=${PAYPAL_CLIENT_ID}
PAYPAL_CLIENT_SECRET=${PAYPAL_CLIENT_SECRET}

# ==================== 短信配置 ====================
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}

# ==================== 日誌配置 ====================
LOG_LEVEL=warn
LOG_FILE_PATH=/app/logs

# ==================== 安全配置 ====================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ==================== 文件上傳配置 ====================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ==================== 監控配置 ====================
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_USER_ANALYTICS=true

# ==================== 備份配置 ====================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ==================== SSL配置 ====================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/cardstrategy.crt
SSL_KEY_PATH=/etc/ssl/private/cardstrategy.key
