# 本地開發環境配置
NODE_ENV=development

# 跳過本地服務檢查
SKIP_LOCAL_SERVICES=true

# 生產環境服務配置 (用於檢查)
PRODUCTION_DB_HOST=your-production-postgres-host
PRODUCTION_DB_PORT=5432
PRODUCTION_DB_NAME=cardstrategy
PRODUCTION_DB_USER=cardstrategy_user
PRODUCTION_DB_PASSWORD=your-secure-db-password

PRODUCTION_REDIS_HOST=your-production-redis-host
PRODUCTION_REDIS_PORT=6379
PRODUCTION_REDIS_PASSWORD=your-secure-redis-password
PRODUCTION_REDIS_TLS=true

# API 配置
RENDER_API_URL=https://cardstrategy-api.onrender.com
DIGITALOCEAN_API_URL=https://api.cardstrategy.com

# 其他配置
CORS_ORIGIN=http://localhost:3000
