# 生產環境配置
NODE_ENV=production
PORT=3000
API_URL=https://api.cardstrategy.com/api

# 數據庫配置 (PostgreSQL)
DB_HOST=your-production-postgres-host
DB_PORT=5432
DB_NAME=cardstrategy
DB_USER=cardstrategy_user
DB_PASSWORD=your-secure-db-password

# Redis 配置
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_TLS=true

# JWT 配置
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRE=30d

# 文件上傳配置
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# 郵件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 第三方 API 配置
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_VISION_API_KEY=your-google-cloud-vision-api-key

# 日誌服務配置
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOGROCKET_APP_ID=your-logrocket-app-id
CUSTOM_LOG_ENDPOINT=https://your-custom-log-service.com/api/logs

# 日誌服務高級配置
LOG_BATCH_SIZE=50
LOG_FLUSH_INTERVAL=30000
LOG_MAX_RETRIES=3
LOG_RETRY_DELAY=1000

# 監控配置
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_USER_ANALYTICS=true

# 安全配置
CORS_ORIGIN=https://cardstrategy.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cloudflare 配置
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# DigitalOcean 配置
DIGITALOCEAN_ACCESS_TOKEN=your-digitalocean-access-token
DROPLET_ID=your-droplet-id
DROPLET_IP=your-droplet-ip

# Render 配置
RENDER_TOKEN=your-render-api-token
RENDER_SERVICE_ID=your-render-service-id

# GitHub 配置
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_REPO=your-username/cardstrategy

# 域名配置
DOMAIN=cardstrategy.com
API_DOMAIN=api.cardstrategy.com
CDN_DOMAIN=cdn.cardstrategy.com
